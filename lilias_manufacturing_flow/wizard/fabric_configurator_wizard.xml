<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="fabric_configurator_wizard" model="ir.ui.view">
        <field name="name">fabric_configurator_wizard</field>
        <field name="model">fabric.configurator.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="both_same_fabric"/>
                            <field name="fabric_top" string="Fabric" domain="[('product_is_fabric_or_use_fabric','=','is_fabric')]" options="{'no_quick_create_edit':True}" attrs="{'invisible':[('both_same_fabric','=',False)]}"/>
                            <field name="fabric_top" domain="[('product_is_fabric_or_use_fabric','=','is_fabric')]" options="{'no_quick_create_edit':True}" attrs="{'invisible':[('both_same_fabric','=',True)]}"/>
                            <field name="fabric_bottom" domain="[('product_is_fabric_or_use_fabric','=','is_fabric')]" options="{'no_quick_create_edit':True}" attrs="{'invisible':[('both_same_fabric','=',True)]}"/>
                        </group>
                        <group>
                            <field name="sale_id" invisible="1"/>
                            <field name="sale_order_line_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="confirm_fabric" type="object" class="btn-primary" string="Confirm"/>
                    <button name="Cancel" class="btn-secondary" string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>